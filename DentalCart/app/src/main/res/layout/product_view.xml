<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="6dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="5dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:id="@+id/productImage_id"
                android:scaleType="centerCrop"
                android:padding="14dp"
                android:alpha="0.5"
                />
            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/progressbar"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_offerstv"
                android:text="save 17% off"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:id="@+id/offerTV_id"
                android:elevation="5dp"
                android:layout_gravity="right"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="16sp"
                android:padding="5dp"
                android:id="@+id/nameProductTV_id"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250000 EGP"
                android:textSize="16sp"
                android:padding="5dp"
                android:id="@+id/pricePeoduct_id"
                android:textColor="@color/color3"
                android:layout_marginTop="4dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_shopping_cart"
                    android:background="@drawable/rounded_cart"
                    android:layout_margin="5dp"
                    android:padding="4dp"
                    android:id="@+id/addToCart_id"
                    android:tag="whiteCart"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_favorite"
                    android:background="@drawable/rounded_cart"
                    android:layout_margin="5dp"
                    android:padding="4dp"
                    android:id="@+id/favorites_id"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_share"
                    android:background="@drawable/rounded_cart"
                    android:layout_margin="5dp"
                    android:padding="4dp"
                    android:id="@+id/share_id"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color4"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        />

</LinearLayout>